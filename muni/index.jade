!!!
head
    title Muni Stops
    script(type="text/javascript", src="built/vendor.js")
    script(type="text/javascript", src="application.js")
    link(rel="stylesheet", href="built/vendor.css")
    link(rel="stylesheet", href="styles.css")
body
    .container-fluid
        .row
            .col-xs-12
                h1 Muni Times Or Whatever
        div#prediction-wrapper
        .row.add-new
            .col-xs-12
                a#add-prediction(href="#") Add Prediction
    script#prediction-template(type="text/template")
        .col-xs-12
            h2 {{route_name}}
            h4 {{direction_name}}
            h4 {{stop_name}}
            a.prediction-remove(href="#") Delete this
            {{#if predictions}}{{else}}
            .prediction-config
                select.route-list
                    option Routes
                    {{#each routes}}
                    <option {{#ifEquals tag ../route}} selected="selected" {{/ifEquals}} value="{{tag}}"> {{tag}} </option>
                    {{/each}}
                br
                {{#if route}}
                select.direction-list
                    option Directions
                    {{#each directions}}
                    <option {{#ifEquals tag ../direction}} selected="selected" {{/ifEquals}} value="{{tag}}"> {{title}} </option>
                    {{/each}}
                br
                {{/if}}
                {{#if direction}}
                select.stop-list
                    option Stops
                    {{#each stops}}
                    <option {{#ifEquals stopId ../stop}} selected="selected" {{/ifEquals}} value="{{stopId}}"> {{title}} </option>
                    {{/each}}
                {{/if}}
            {{/if}}
            .predictions {{#each predictions}} {{time}}, {{/each}}
            a.refresh(href="#") Refresh

